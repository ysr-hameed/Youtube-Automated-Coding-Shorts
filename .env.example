# Database connection (Postgres)
# Example: postgres://user:password@localhost:5432/vidgen
DATABASE_URL=postgresql://postgres:password@localhost:5432/vidgen

# Daily number of schedule runs (1-12). Schedules are randomized within 8:00-21:00 IST and at least 30 min apart.
DAILY_SCHEDULES=1

# Optional: specify explicit schedule times (comma-separated) in IST using HH:MM format.
# e.g., DAILY_SCHEDULE_TIMES=08:30,14:00,19:00    (if set, DAILY_SCHEDULES will be ignored)
DAILY_SCHEDULE_TIMES=

# Timeout for scheduled generation and upload in seconds (default 600 = 10 minutes)
SCHEDULE_TIMEOUT_SECONDS=600

# Database connection tuning
# Timeout in seconds to use when connecting to Postgres
DB_CONNECT_TIMEOUT=10
# Number of times to retry connecting to the DB before falling back to mock storage
DB_RETRIES=3
# Seconds to wait between retries
DB_RETRY_DELAY=2

# Optional: validate DB connection on startup (true/false). Default true
DB_VALIDATE_ON_START=true
DB_CONNECT_AFTER_START=true
DB_CONNECT_AFTER_START_DELAY=10

# Throttle the number of similar DB connection error logs in seconds (default 60)
DB_LOG_SUPPRESSION_SECONDS=60

# Minimum minutes gap between scheduled runs (default 60 = 1 hour)
DAILY_MIN_GAP_MINUTES=60

# Limit how many uploads per day are allowed (the scheduler will skip if this is reached)
DAILY_UPLOAD_LIMIT=1

# Enable upload in scheduled runs (default true for scheduled runs; can be overridden by autoflag in UI for manual runs)
ENABLE_UPLOAD=true

# Enable the background scheduler thread (only applicable when running the Flask app in-process)
ENABLE_SCHEDULER=true

# Environment debug flag for Flask dev server
FLASK_DEBUG=0

# Cron secret to protect /api/cron/generate endpoint (optional)
CRON_SECRET=changeme

# OAuth / YouTube config: Provide client id/secret for initial authorization flow
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: limit the OpenAI/Gemini or other AI result by keys or endpoints, if applicable
# AI_API_KEY=put_your_gemini_key_here

# Optional: If you're using production Google credentials JSON, store path or the raw JSON in DB or persistent store.
# YOUTUBE_CREDENTIALS_JSON_PATH=/path/to/credentials.json

# Optional flags for audio: keep as defaults
# If pydub and ffmpeg are not available in the environment, audio is disabled gracefully.
DISABLE_AUDIO=false

# Example: for Render/Heroku or other platforms, set the port via environment
PORT=5000
